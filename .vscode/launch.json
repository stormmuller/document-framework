    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Sample)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build sample",
            "program": "${workspaceFolder}/Sample/bin/Debug/net5.0/Sample.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Sample",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (Tool)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build tool",
            "program": "${workspaceFolder}/Tool/bin/Debug/net5.0/DocumentFramework.Tool.dll",
            "args": ["--help"],
            "cwd": "${workspaceFolder}/Tool",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}